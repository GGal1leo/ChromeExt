{
  "manifest_version": 3,
  "name": "Gmail Dark Mode",
  "version": "1.0",
  "description": "Apply dark mode to Gmail for a better browsing experience",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gmail Dark Mode"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dark-mode.css"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}
